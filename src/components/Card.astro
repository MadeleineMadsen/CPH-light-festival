    align-items:center;
    text-align: left;
  }

  /* CSS for the card image */
  .kort-billede {
    width: 100%;
    height: auto;
    object-fit: cover;
    object-position: top center;
    margin: 0%;
    padding: 0%;
 
}

  /* CSS for a button inside the card */
  .card-button {
    align-self: flex-start;
    padding: 10px 20px;
    background-color: #3f4f79;
    color: #fff;
    margin-bottom: auto;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    border: 1px solid #0e91ef;
  }

  .card-button:hover {
    background-color: #3381d4;
    color: #f0f0f0;
    border-radius: 8px;
    animation-name: glow;
    animation-duration: 2s;
    animation-iteration-count: infinite;
    text-shadow: 0 0 20px rgba(51, 129, 212, 1);
    box-shadow: 0 0 20px rgba(51, 129, 212, 1);
  }

  /* CSS for the button on hover */
  .card-button:hover {
    background-color: #0056b3;
