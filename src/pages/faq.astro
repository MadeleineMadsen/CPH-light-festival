<style>
body {
    background-color: #151515;
    margin: 0;
    padding: 0;
}

.blur-box {
    background-color: hsla(0, 0%, 85%, 0.46);
    padding: 10px;
    margin: 0;
}
.container-box {
    background-color: #3B507C;
margin: 10cqw;
}
.collapsible .icon::before {
  content: "+";
  display: inline-block;
  margin-right: 10px;
}

.collapsible.active .icon::before {
  content: "-";  
  margin-right: 10px;
}
.container {
    padding: 20px;
}
    /* Style the button that is used to open and close the collapsible content */
.collapsible {
    display: flex;
justify-content: space-between;
    background-color: #3B507C;
  color: #E1E2E6;
  cursor: pointer;
  padding: 18px;
  margin-top: 4px;
  margin-bottom: 4px;
  width: 100%;
  border: none;
  text-align: left;
  outline: none;
  font-size: 20px;
  transition: background-color 0.3s ease-in-out;
  border: solid 1px #000000;
}

/* Add a background color to the button if it is clicked on (add the .active class with JS), and when you move the mouse over it (hover) */
.active, .collapsible:hover {
  background-color: #0E91EF;
}

/* Style the collapsible content. Note: hidden by default */
.content {
    max-height: 0;
  padding: 0 18px;
  overflow: hidden;
  background-color: #0E91EF;
  transition: max-height 0.3s ease-in-out;
}
/* Show the content when the .active class is applied */
.active + .content {
  max-height: 500px; /* Adjust this value based on your content's maximum height */
  border: solid 1px #000000;
  
}
.active {
    border-bottom: none;
    margin-bottom: 0;
}
</style>
<script>
    // Vælg collapsible
    const coll = document.querySelectorAll(".collapsible");

    // Når man klikker på hvert element, funktionen bliver aktiv og laver "toggle"
coll.forEach(element=>{
    element.addEventListener("click", function() {
        element.classList.toggle("active");
    })
})
</script>