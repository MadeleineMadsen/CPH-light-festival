<style>
.button {
	text-decoration: none;
	color: #f83944;
	padding: 10px 15px;
	border-radius: 10px;
	transition: all 0.2s ease-in-out;
  }
  
  .glow-button {
	background-color: transparent;
	color: #f83944;
	border-radius: 10px;
	transition: background-color 0.2s ease-in-out;
  }
  
  .glow-button:hover {
	background-color: #3381d4;
	color: #f0f0f0;
	border-radius: 10px;
	animation-name: glow;
	animation-duration: 2s;
	animation-iteration-count: infinite;
	text-shadow: 0 0 20px rgba(51, 129, 212, 1);
	box-shadow: 0 0 20px rgba(51, 129, 212, 1);
  }
  
  @keyframes glow {
	0% {
	  filter: drop-shadow(0 0 35px#3380d4);
	}
	100% {
	  filter: drop-shadow(0 0 35px #3380d4);
	}
  }
  
</style>
