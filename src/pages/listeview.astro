<style>
  .grid-container {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 10px;
  }

  /* CSS for the card container */

  .card {
    width: 300px;
    background-color: #3f4f79;

    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    margin: 20px;
    padding: 20px;

    z-index: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  /* CSS for the card title */
  .card h2 {
    font-size: 24px;
    color: white;
  }

  /* CSS for the card content */
  .card p {
    font-size: 16px;
    color: white;
  }

  /* CSS for the card image */
  .card img {
    width: 300px;
    height: 230px;
    margin-bottom: 10px;
  }

  /* CSS for a button inside the card */
  .card button {
    align-self: flex-start;
    padding: 10px 20px;
    background-color: #3f4f79;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    border: 1px solid #0e91ef;
  }

  .card button:hover {
    background-color: #3381d4;
    color: #f0f0f0;
    border-radius: 10px;
    animation-name: glow;
    animation-duration: 2s;
    animation-iteration-count: infinite;
    text-shadow: 0 0 20px rgba(51, 129, 212, 1);
    box-shadow: 0 0 20px rgba(51, 129, 212, 1);
  }

  /* CSS for the button on hover */
  .card button:hover {
    background-color: #0056b3;
  }

  a {
    text-decoration: none;
    color: white;
  }

  /* mobil */

  @media screen and (max-width: 800px) {
    a {
      text-decoration: none;
      color: white;
    }
    .grid-container {
      display: grid;
      grid-template-columns: 1fr;
      align-items: center;
      gap: 10px;
    }

    body {
      margin-left: 0%;
      padding: 0%;
    }
  }
</style>

